{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "${workspaceFolder}/node_modules/ts-node/register",
        "--inspect-brk",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/src/test/**/*.test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ],
  "compounds": []
}
